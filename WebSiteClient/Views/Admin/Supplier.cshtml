
@{
    ViewData["Title"] = "Supplier";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Css{

    <link href="~/css/admin/supplier.css" rel="stylesheet" />
}
<div class="h main-form">

    <span class="h title-supplier">
        TRANG CẬP NHẬT LOẠI SẢN PHẦM
        <span class="h bnt-add-supplier" data-toggle="modal" data-target="#insert-supplier">+ Thêm mới</span>
    </span>
    <div class="h table-supplier" id="item-supplier">
        <div class="h head-table">
            <span class="h item-table">Ảnh</span>
            <span class="h item-table">Mã hãng</span>
            <span class="h item-table">Tên hãng</span>
            <span class="h item-table">Địa chỉ</span>
            <span class="h item-table">SDT</span>
            <span class="h item-table">Email</span>
            <span class="h item-table">Ngày tạo</span>
            <span class="h item-table">Trạng thái</span>
            <span class="h item-table">Chức năng</span>
        </div>
        @*<div class="h body-table">
                <span class="h item-table">Ảnh</span>
                <span class="h item-table">Mã loại</span>
                <span class="h item-table">Tên loại</span>
                <span class="h item-table">Ghi chú</span>
                <span class="h item-table">Ngày tạo</span>
                <span class="h item-table">
                    <i class="fa fa-pencil-square-o icon-edit" aria-hidden="true"></i>
                    <i class="fa fa-trash-o icon-edit" aria-hidden="true"></i>
                </span>
            </div>*@
    </div>
    @*add line product*@
    <div class="modal fade" id="insert-supplier" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thêm hãng</h4>
                </div>
                <div class="h modal-body">
                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">Tên hãng: </span>
                        <input class="h insert-pr-input" id="txtsuppliername" type="text" />
                    </div>
                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">Địa chỉ: </span>
                        <input class="h insert-pr-input" id="txtaddress" type="text" />
                    </div>
                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">SDT: </span>
                        <input class="h insert-pr-input" id="txtnumberphone" type="number" />
                    </div>
                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">Email: </span>
                        <input class="h insert-pr-input" id="txtemail" type="email" />
                    </div>


                    <div class="k dl-sm-it">
                        <span class="h insert-supplier" id="sl-db-active">Ngày tạo: </span>
                        <div class="form-group">
                            <div class='input-group date' id='datepicker-linecrday'>
                                <input type='text' class="form-control" id="txtcreateday" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">Trạng thái: </span>

                        <select name="selector1" id="sl-ativity-edit" class="h insert-prduct-select ">
                            <option value="0">Còn hoạt động</option>
                            <option value="1">Ngừng hoạt động</option>
                       
                        </select>
                    </div>

                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">Anh: </span>
                        <input class="h insert-pr-input" id="txtpicture" type="file" />

                    </div>

                    @*<span class="k dl-bnt-save" onclick="updateChiBo()">Cập nhật</span>*@
                </div>
                <div class="modal-footer">
                    <button type="button" class="k btn btn-default" data-dismiss="modal">
                        Đóng
                    </button>
                    <span type="button" class="h btn-insert" onclick="insertsupplier()">
                        <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
                        Cập nhật
                    </span>
                </div>
            </div>

        </div>
    </div>
    @*Editlineproduct*@
    <div class="modal fade" id="linepr-edit" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Cập nhật hãng</h4>
                </div>
                <div class="h modal-body">
                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">Tên hãng: </span>
                        <input class="h insert-pr-input" id="txtsuppliername-edit" type="text" />
                    </div>
                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">Địa chỉ: </span>
                        <input class="h insert-pr-input" id="txtaddress-edit" type="text" />
                    </div>
                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">SDT: </span>
                        <input class="h insert-pr-input" id="txtnumberphone-edit" type="number" />
                    </div>
                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">Email: </span>
                        <input class="h insert-pr-input" id="txtemail-edit" type="email" />
                    </div>


                    <div class="k dl-sm-it">
                        <span class="h insert-supplier" id="sl-db-active">Ngày tạo: </span>
                        <div class="form-group">
                            <div class='input-group date' id='datepicker-linecrday'>
                                <input type='text' class="form-control" id="txtcreateday-edit" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">Trạng thái: </span>

                        <select name="selector1" id="sl-ativity-edit" class="h insert-prduct-select ">
                            <option value="0">Còn hoạt động</option>
                            <option value="1">Ngừng hoạt động</option>

                        </select>
                    </div>

                    <div class="h dl-sm-it">
                        <span class="h insert-supplier">Anh: </span>
                        <input class="h insert-pr-input" id="txtpicture" type="file" />

                    </div>

                    @*<span class="k dl-bnt-save" onclick="updateChiBo()">Cập nhật</span>*@
                </div>
                <div class="modal-footer">
                    <button type="button" class="k btn btn-default" data-dismiss="modal">
                        Đóng
                    </button>
                    <span type="button" class="h btn-insert" onclick="updatesupplier()">
                        <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
                        Cập nhật
                    </span>
                </div>
            </div>

        </div>
    </div>

</div>

@section Script{

    <script src="~/js/admin/supplier.js"></script>
}

